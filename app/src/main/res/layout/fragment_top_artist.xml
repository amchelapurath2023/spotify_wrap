<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_final_wrapped">
    <TextView
        android:id="@+id/textViewTopSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Artists"
        android:gravity="right"
        android:textColor="@color/gold"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="16dp" />


    <!-- Artist 1 -->
    <RelativeLayout
        android:id="@+id/containerSong1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTopSongs"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp">


        <ImageView
            android:id="@+id/imageViewSong1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/black"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewSong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewSong1"
            android:layout_alignTop="@id/imageViewSong1"
            android:layout_alignBottom="@id/imageViewSong1"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="Artist 1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/containerSong1"
        android:background="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <!-- Artist 2 -->
    <RelativeLayout
        android:id="@+id/containerSong2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageViewSong2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/black"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewSong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewSong2"
            android:layout_alignTop="@id/imageViewSong2"
            android:layout_alignBottom="@id/imageViewSong2"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="Artist 2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/containerSong2"
        android:background="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <RelativeLayout
        android:id="@+id/containerSong3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageViewSong3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/black"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewSong3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewSong3"
            android:layout_alignTop="@id/imageViewSong3"
            android:layout_alignBottom="@id/imageViewSong3"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="Artist 3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/containerSong3"
        android:background="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <RelativeLayout
        android:id="@+id/containerSong4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageViewSong4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/black"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewSong4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewSong4"
            android:layout_alignTop="@id/imageViewSong4"
            android:layout_alignBottom="@id/imageViewSong4"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="Artist 4"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>






    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/containerSong4"
        android:background="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <RelativeLayout
        android:id="@+id/containerSong5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageViewSong5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/black"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewSong5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageViewSong5"
            android:layout_alignTop="@id/imageViewSong5"
            android:layout_alignBottom="@id/imageViewSong5"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="Artist 5"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>





    <!-- Repeat the above pattern for other songs -->

    <Button
        android:id="@+id/go_to_final_wrap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="->"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />


</RelativeLayout>
